<body>
    <p> Mảng a = [ 0,1,2,3,4,412,2,23,4]</p>
    <script>
        let a = [0, 1, 2, 3, 4, 412, 2, 23, 4];
        let b = +prompt("nhập số để kiểm tra :")

        function checkSo() {
            let count = 0
            for (i = 0; i < a.length; i++) {
                if (b == a[i]) {
                    count++
                    console.log(b + " xuất hiện trong mảng a " + count + " lần");
                   
                }else {
                    console.log(b + " không nằm trong mảng a")
                     
                }
            }



        } checkSo()

    </script>
